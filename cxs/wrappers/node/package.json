{
  "name": "cxs",
  "version": "1.0.0",
  "author": "evernym",
  "license": "ISC",
  "description": "Node wrapper for cxs",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "compile": "./node_modules/.bin/tsc -p ./tsconfig.json",
    "lint": "./node_modules/.bin/tslint --type-check -c ./tslint.json -p ./tsconfig.json && ./node_modules/.bin/standard 'test/**/*.js'",
    "test": "mocha -gc --expose-gc test/**/*Test.js && mocha -gc --expose-gc test/**/*Test.separate.js",
    "doc-gen": "./node_modules/.bin/jsdoc -r -d doc dist/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evernym/cxs.git"
  },
  "bugs": {
    "url": "https://github.com/evernym/cxs/issues"
  },
  "homepage": "https://github.com/evernym/cxs#readme",
  "dependencies": {
    "@types/ffi": "0.0.19",
    "@types/node": "^8.0.47",
    "@types/ref": "0.0.28",
    "@types/ref-struct": "0.0.28",
    "ffi": "^2.2.0",
    "fs-extra": "^4.0.2",
    "path": "^0.12.7",
    "ref": "^1.3.5",
    "ref-struct": "^1.1.0",
    "weak": "^1.0.1"
  },
  "directories": {
    "test": "test",
    "lib": "src",
    "build": "dist"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc": "^3.5.5",
    "mocha": "^3.5.3",
    "sinon": "^4.1.2",
    "standard": "^10.0.3",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.3"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
